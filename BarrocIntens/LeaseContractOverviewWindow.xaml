<Window x:Class="BarrocIntens.LeaseContractOverviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Lease Contracts Overview" >
    <Grid>
        <ListView x:Name="LeaseContractsListView" Margin="20">

            <GridView>
                <DataTemplate>
                    <TextBlock Text="{Binding CustomerName}" />
                </DataTemplate>
                <DataTemplate>
                    <Button Content="Edit" Click="EditLeaseContractButton_Click"/>
                </DataTemplate>
                <DataTemplate>
                    <Button Content="Delete" Click="DeleteLeaseContractButton_Click"/>
                </DataTemplate>
            </GridView>
        </ListView>
    </Grid>
</Window>

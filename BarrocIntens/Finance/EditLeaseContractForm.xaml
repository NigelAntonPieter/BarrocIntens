<Window
    x:Class="BarrocIntens.EditLeaseContractForm"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Edit Lease Contract" >

    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Edit Lease Contract" FontWeight="Bold" FontSize="16"/>

            <TextBlock Text="Customer Name:" Margin="0,10,0,0"/>
            <TextBox x:Name="CustomerNameTextBox" PlaceholderText="Enter customer name" Margin="0,0,0,10"/>
            <CheckBox x:Name="BkrCheckCheckBox" Content="BKR Check Passed" Margin="0,10,0,0"/>
            <CheckBox x:Name="MonthlyInvoiceCheckBox" Content="Monthly Invoice" Margin="0,10,0,0"/>
            <TextBlock Text="Lease Contract ID:" Margin="0,10,0,0"/>
            <TextBox x:Name="LeaseContractIdTextBox" PlaceholderText="Enter Lease Contract ID" Margin="0,0,0,10"/>
            <Button Content="Save Changes" Click="SaveChangesButton_Click" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>

<Window
    x:Class="BarrocIntens.CreateClientNoteWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BarrocIntens"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid>

    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="1*" />
        <ColumnDefinition Width="3*" />
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
        <RowDefinition Height="1*" />
        <RowDefinition Height="5*" />
    </Grid.RowDefinitions>

    <StackPanel Grid.Column="0"
                    Grid.RowSpan="2"
                    Background="#fdd716" />
    <StackPanel Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center">
        <TextBlock Text="Voeg een note toe" FontSize="50" FontWeight="Bold" FontFamily="arial"/>
    </StackPanel>
    <StackPanel Grid.Column="1" Grid.Row="1">
        <TextBlock Text="Opmerkingen:"
                       HorizontalAlignment="center"
                       Margin="0,0,0,10"  />
        <TextBox x:Name="commentsTB"/>
        <TextBlock Text="Afspraken:"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10" />
        <TextBox x:Name="appointmentTitleTB"
                       Margin="0,0,0,10" />
        <TextBlock Text="Datum van afspraak:"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10" />
        <CalendarDatePicker x:Name="appointmentDatePicker"
                       HorizontalAlignment="Center"
                       Date="{x:Bind AppointmentDate, Mode=TwoWay}"
                       Margin="0,0,0,10" />
        <TextBlock Text="Bedrijf (Id):"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"  />
        <TextBox x:Name="companiesTB"
                       Margin="0,0,0,10"  />

        <Button Content="Opslaan"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Width="75"
                    Click="SaveButton_Click" />
        <ContentDialog x:Name="wrongCompanyCD"
                    Title="Ongeldige gegevens"
                    CloseButtonText="OK">
            <StackPanel>
                <TextBlock Text="Ongeldig bedrijf. Deze bestaat niet in de lijst van bedrijven." />
            </StackPanel>
        </ContentDialog>
        <ContentDialog x:Name="wrongInputCD"
                    Title="Ongeldige gegevens"
                    CloseButtonText="OK">
            <StackPanel>
                <TextBlock Text="Ongeldige invoer. Voer een geldig getal in." />
            </StackPanel>
        </ContentDialog>
    </StackPanel>

    </Grid>
</Window>
